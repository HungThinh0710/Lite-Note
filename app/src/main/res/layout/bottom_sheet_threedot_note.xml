<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottom_sheet_threedote_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"

    android:paddingBottom="10dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    >

    <Button
        android:id="@+id/btn_bottom_sheet_threedot_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_delete_black_24dp"
        android:drawablePadding="30dp"
        android:gravity="left|center_vertical"
        android:text="@string/bottom_sheet_delete_button"
        android:textAllCaps="false"
        android:textSize="19sp" />
    <Button
        android:id="@+id/btn_bottom_sheet_threedot_make_a_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_content_copy_black_24dp"
        android:gravity="left|center_vertical"
        android:drawablePadding="30dp"
        android:text="@string/bottom_sheet_make_a_copy_button"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:background="@null"
        />
    <Button
        android:id="@+id/btn_bottom_sheet_threedot_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_share_black_24dp"
        android:gravity="left|center_vertical"
        android:drawablePadding="30dp"
        android:text="@string/bottom_sheet_share_button"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:background="@null"
        />


    <HorizontalScrollView
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_bottom_sheet_circle_white"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_btsheet_white"
            android:layout_gravity="center_vertical"
            app:civ_border_color="@color/black"
            app:civ_border_width="1.5dp"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_red_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_red_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_yellow_heavy"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_yellow_heavy"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_yellow_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_yellow_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_green_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_green_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_cyan_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_cyan_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_cyan_light_two"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_cyan_light_two"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_blue_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_blue_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_violet_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_violet_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_pink_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_pink_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_brown_light"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_brown_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_bottom_sheet_circle_greylight"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_btsheet_grey_light"
                android:layout_gravity="center_vertical"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp" />
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>