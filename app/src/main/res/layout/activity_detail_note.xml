<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_note"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetailNoteActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_detail_note_back"
                    android:layout_gravity="center_vertical|left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_left_back"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <Button
                    android:id="@+id/save_detail_note"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_save_black_40dp"
                    android:text="SAVE"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            />
        <EditText
            android:id="@+id/edt_detail_title"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_detail_content"
            android:layout_below="@id/edt_detail_title"
            android:layout_above="@id/layout_detail_note_bottom"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:gravity="left"/>
        <ImageView
            android:layout_below="@id/edt_detail_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@color/grey"
            android:layout_marginTop="6dp"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_above="@id/layout_detail_note_bottom"
            android:layout_marginBottom="-3dp" />


        <!-- Adding bottom sheet after main content -->
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/layout_frame_bottom_sheet_detail_note"
            android:layout_above="@id/layout_detail_note_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/bottom_sheet_threedot_note" />
            <include layout="@layout/bottom_sheet_add_note" />
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/layout_detail_note_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_detail_note_add"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/ic_add_circle_outline_black_24dp"
                    android:textSize="35sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txt_detail_time_modify"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modified at xxxxxxx"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/btn_detail_note_threedot"
                    android:layout_centerVertical="true"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/ic_more_vert_black_24dp"
                    android:textSize="35sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>